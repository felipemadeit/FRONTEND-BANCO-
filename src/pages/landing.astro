---
import CreditCard from "../components/CreditCard.astro";
import SideForm from "../components/SideForm.astro";

const pageTitle = "Home";

---

<link rel="stylesheet" href="./src/styles/global.css">
<title>{pageTitle}</title>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Acme&family=Concert+One&family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&family=Fjalla+One&family=Jaro:opsz@6..72&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Fjalla+One&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

<nav id="landing-nav">
    <div class="block-nav" id="wrapper-logo-nav">
        <h1>B$ank</h1>
    </div>
    <div class="block-nav">
        <div id="wrapper-grid-navigation">
            <div class="button-navigation">Help</div>
            <div class="button-navigation">Contact Us</div>
            <div class="button-navigation">About Us</div>
        </div>
    </div>
    <div class="block-nav" id="wrapper-button-nav-join">
        <button>Join</button>
       
    </div>
</nav>


<div id="wrapper-main-content-landing">
    <div id="left-main-info">
        <h1 class="animate-text" id="animate-text">
            Protect your money,
            Invest in your future,
           Achieve your goals.
        </h1>

        <p>A bank isn't just a place to keep money, it's your partner in making it grow. Invest with confidence and achieve more.</p>

        <div id="wrapper-cta-landing">
            <input  id="inputEmail" type="email" placeholder="Write your email" />
            <button id="button-cta">
                Register Now
               <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-arrow-right"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l14 0" /><path d="M13 18l6 -6" /><path d="M13 6l6 6" /></svg>
            </button>
               
        </div>
    </div>

    <div id="right-wrapper-cards">
        <CreditCard />
    </div>
</div>


<SideForm />



<script src="../scripts/landingUtils.js" />